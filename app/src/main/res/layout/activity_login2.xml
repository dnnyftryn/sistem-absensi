<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.guru.LoginGuruActivity">

    <LinearLayout
        android:id="@+id/llLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_teacher"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:src="@drawable/login"
            android:layout_margin="@dimen/_10sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang!"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/_36sdp"
            android:textColor="#222222"
            android:layout_gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk untuk melanjutkan sebagai Guru"
            android:fontFamily="@font/roboto"
            android:textSize="@dimen/_12sdp"
            android:textColor="#999999"
            android:layout_gravity="center"
            android:textStyle="bold"/>

    </LinearLayout>


    <EditText
        android:id="@+id/etEmail"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/llLogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Nama Pengguna"
        android:paddingStart="35dp"
        android:textColorHint="@color/color_black_text"
        android:background="@drawable/button_state_bg"
        tools:ignore="Autofill,HardcodedText,RtlSymmetry,TextFields" />


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/etPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:passwordToggleEnabled="true"
        app:hintEnabled="false">

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:autofillHints="name"
            android:paddingStart="35dp"
            android:hint="Kata Sandi"
            android:textColorHint="@color/color_black_text"
            android:background="@drawable/button_state_bg"
            android:inputType="textPassword"
            tools:ignore="Autofill,HardcodedText,RtlSymmetry,TextFields"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/btnSignIn"
        app:layout_constraintTop_toBottomOf="@id/etPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/blue_bg"
        android:layout_marginBottom="20dp"
        android:text="Masuk"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_rounded_button"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>